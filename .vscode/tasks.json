{
	"version": "2.0.0",
	// All tasks now use bash scripts in scripts/bash/ for consistency with CLI agents.
	// Scripts run in WSL and call Windows executables, maintaining full performance.
	"tasks": [
		{
			"label": "Clean",
			"type": "shell",
			"command": "wsl",
			"args": [
				"bash",
				"scripts/bash/clean.sh"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Configure",
			"type": "shell",
			"command": "wsl",
			"args": [
				"bash",
				"scripts/bash/configure.sh"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Build App",
			"type": "shell",
			"command": "wsl",
			"args": [
				"bash",
				"scripts/bash/build.sh"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Run App",
			"type": "shell",
			"command": "wsl",
			"args": [
				"bash",
				"scripts/bash/run.sh"
			],
			"group": "test",
			"problemMatcher": []
		},
		{
			"label": "Run clang-format",
			"type": "shell",
			"command": "wsl",
			"args": [
				"bash",
				"scripts/bash/format.sh"
			],
			"problemMatcher": []
		},
		{
			"label": "Run clang-tidy",
			"type": "shell",
			"command": "wsl",
			"args": [
				"bash",
				"scripts/bash/lint.sh"
			],
			"problemMatcher": []
		},
		{
			"label": "Run cppcheck",
			"type": "shell",
			"command": "wsl",
			"args": [
				"bash",
				"scripts/bash/analyze.sh"
			],
			"problemMatcher": []
		}
	]
}