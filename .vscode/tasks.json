{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake: Configure (Debug)",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-S",
				".",
				"-B",
				"build/ninja",
				"-G",
				"Ninja",
				"-DCMAKE_BUILD_TYPE=Debug",
				"-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "CMake: Build (Debug)",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build/ninja"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Run (Debug)",
			"type": "shell",
			"command": "${workspaceFolder}/build/ninja/FrogLords.exe",
			"group": "test",
			"problemMatcher": []
		},
		{
			"label": "Format: clang-format src",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/run_clang_format.ps1"
			],
			"problemMatcher": []
		},
		{
			"label": "Lint: clang-tidy src",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/run_clang_tidy.ps1"
			],
			"problemMatcher": []
		},
		{
			"label": "Check: cppcheck",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/run_cppcheck.ps1"
			]
		}
	]
}